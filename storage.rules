rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // Allow public read access to product images
      allow read: if true;
      // Allow authenticated users (Admin/Staff) to upload
      // In a real app, strict role checks (hasRole('ADMIN')) should be added here
      allow write: if request.auth != null;
    }
  }
}